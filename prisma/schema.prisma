// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String?
  images   Image[]   
}

model Image {
  id          Int     @id @default(autoincrement())
  path        Int
  price       Int
  title       String
  description String?
  seller      User @relation(fields:[sellerId], references: [id])
  sellerId    Int
}